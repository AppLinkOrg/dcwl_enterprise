<!--pages/dispatch/dispatch.wxml-->

<view class="flex-row margin-top-20">
  <view class="flex-1"></view>
  <view class='content'>
    <view class='flex-row padding-bottom-30 padding-top-20'>
      <view class='margin-left'>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>订单号：</view> 244548450</view>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>取货地点：</view> 深圳市城西路22号</view>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>送达地点：</view> 深圳市城西路22号</view>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>路程：</view>150km</view>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>货物：</view>钢筋</view>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>载重：</view>50吨</view>
        <view class='margin-10 txt-black f-32 flex-row height-50'>
          <view class='txt-black f-32' style='width: 180rpx;'>价格：</view>5500元</view>
      </view>

    </view>

    <form>
      <view class='margin-left padding-top-40 '>
        <view class='margin-10  flex-row height-70 margin-bottom-40 input flex-center' style='width: 94%;'>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" class='txt-black f-32 flex-row flex-center margin-left-20'>
            请选择司机{{array[index]}}
          </picker>
          <view class="flex-1"></view>
          <image src='{{uploadpath}}resource/direction.png' class='icon-30 margin-10'></image>
        </view>

        <view class='margin-10  flex-row height-70 margin-bottom-40 input' style='width: 94%;'>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" class='txt-black f-32 flex-row flex-center margin-left-20'>
            请选择司机{{array[index]}}
          </picker>
          <view class="flex-1"></view>
          <image src='{{uploadpath}}resource/direction.png' class='icon-30 margin-10'></image>
        </view>

      </view>

      <view class='flex-center flex-row margin-top-200 padding-bottom-50'>
        <view class="flex-1"></view>
        <button class='bg-blue txt-white text-center margin-20 f-32' form-type='submit' style='width: 200rpx;'>确定派单</button>
        <view class="flex-1"></view>
      </view>
    </form>
  </view>



  <view class="flex-1"></view>
</view>